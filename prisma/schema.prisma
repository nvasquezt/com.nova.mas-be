// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vehicles {
id Int @id
licensePlate String @unique
brand String
modelAge Int
classCar String
fuelType String
cylinder String
capacity Int
soatCode String @unique
insurancePolicy String @unique
vehiclePhone String
status Boolean @default(true)
drivers Users[]
dates Dates[]
prevMaintenances PrevMaintenances[]
ctvMaintenances CtvMaintenances[]
specMaintenances SpecMaintenances[]
trackingLogs TrackingLogs[]
}

model Users {
idUser String @id
idVehicle Vehicles @relation(fields: [idVehicleFk], references: [id])
idVehicleFk Int
name String
lastName String
userPhone String
annotations Annotations[]
status Boolean @default(true)
role String @default("user")
password String
}

model Annotations {
idAnnotation Int @id @default(autoincrement())
user Users @relation(fields: [idUserFk], references: [idUser])
idUserFk String
date DateTime @default(now())
description String
}

model Dates {
  dateCode Int @id
  idVehicle Vehicles @relation(fields: [idVehicleFk], references: [id])
  idVehicleFk Int
  soatDate DateTime
  insuranceDate DateTime
  legalRevisionDate DateTime
}

model PrevMaintenances {
  idMaintenance Int @id @default(autoincrement())
  idVehicle Vehicles @relation(fields: [idVehicleFk], references: [id])
  idVehicleFk Int
  description String
  commercialInvoice String
}

model CtvMaintenances {
  idCorrective Int @id @default(autoincrement())
  idVehicle Vehicles @relation(fields: [idVehicleFk], references: [id])
  idVehicleFk Int
  description String
  picEvidence String
  commercialInvoice String
}

model SpecMaintenances {
  idSpecific Int @id @default(autoincrement())
  idVehicle Vehicles @relation(fields: [idVehicleFk], references: [id])
  idVehicleFk Int
  description String
  picEvidence String
  commercialInvoice String
}

model TrackingLogs {
  idLog Int @id @default(autoincrement())
  idVehicle Vehicles @relation(fields: [idVehicleFk], references: [id])
  idVehicleFk Int
  date DateTime @default(now())
  latitude String
  longitude String
}
